{
  "name": "boyler",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "build": "npx npm-run-all set-env:local build:asset build:hugo-debug build:service-worker",
    "build:asset": "npx rollup -c",
    "build:hugo-debug": "hugo --debug --verbose --templateMetrics --templateMetricsHints",
    "build:hugo-production": "hugo --gc --minify --cleanDestinationDir",
    "build:production": "npx npm-run-all set-env:production build:asset build:hugo-production build:service-worker",
    "build:service-worker": "npx cross-env NODE_ENV=local workbox generateSW workbox-config.js",
    "dev": "npm run watch",
    "gen": "npm run build",
    "prod": "npm run build:production",
    "set-env:local": "npx cross-env HUGO_ENV=local NODE_ENV=local",
    "set-env:production": "npx cross-env HUGO_ENV=production NODE_ENV=production",
    "sort": "npx sort-package-json",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "npx npm-run-all --parallel watch:asset watch:hugo",
    "watch:asset": "npx rollup -c -w",
    "watch:hugo": "hugo serve"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.0",
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.1",
    "@tailwindcss/ui": "^0.1.3",
    "alpinejs": "^2.0.2",
    "autoprefixer": "^9.7.4",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "postcss-import": "^12.0.1",
    "postcss-nested": "^4.2.1",
    "postcss-preset-env": "^6.7.0",
    "rollup": "^1.32.0",
    "rollup-plugin-postcss": "^2.5.0",
    "rollup-plugin-terser": "^5.2.0",
    "tailwindcss": "^1.2.0",
    "turbolinks": "^5.2.0"
  }
}
